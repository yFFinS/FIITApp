<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Button.title-btn">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Panel>
                        <Border Name="Hover" Width="35" Height="35" Background="#00000000" ZIndex="1" CornerRadius="5"/>
                        <Border Name="Base" Width="35" Height="35" Background="#D8C595" CornerRadius="5"/>
                    </Panel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style Selector="Button.close:pointerover/template/Border#Base">
        <Setter Property="Background" Value="#ef0000"/>
    </Style> 
    
    <Style Selector="Button.title-btn:not(.close):pointerover/template/Border#Hover">
        <Setter Property="Background" Value="#C6B27E"/>
    </Style>
    
    <Style Selector="Button.title-btn:not(.close):pressed/template/Border#Hover">
        <Setter Property="Background" Value="#FFC9B88B"/>
    </Style>
</Styles>
