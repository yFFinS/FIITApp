<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <!-- Add Controls for Previewer Here -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Button.title-btn">
        <Setter Property="Width" Value="45"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="CornerRadius" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="Button.title-btn/template/ContentPresenter">
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style Selector="Button.close:pointerover/template/Border#Base">
        <Setter Property="Background" Value="#ef0000"/>
    </Style> 
    
    <Style Selector="Button.title-btn:not(.close):pointerover/template/Border#Hover">
        <Setter Property="Background" Value="#C6B27E"/>
    </Style>
    
    <Style Selector="Button.title-btn:not(.close):pressed/template/Border#Hover">
        <Setter Property="Background" Value="#FFC9B88B"/>
    </Style>
</Styles>
