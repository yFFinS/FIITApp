<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Recipes.Presentation.Controls">
    <Design.PreviewWith>
        <Border Padding="20" Background="{DynamicResource AppBackground}">
            <StackPanel Spacing="10">
                <controls:SearchBar Height="40"
                                    Width="250"/>
                <TextBox Watermark="abceqwedw"/>
            </StackPanel>

        </Border>
    </Design.PreviewWith>
    
    <Style Selector="TextBox.search">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="TextAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Bottom"/>
    </Style>
    
    <Style Selector="TextBox:pointerover.search/template/Border#Hover">
        <Setter Property="Background" Value="{DynamicResource ButtonHover}"/>
    </Style>
    
    <Style Selector="TextBox.search/template/TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource TextForeground}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
    <Style Selector="TextBox.search/template/TextPresenter">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</Styles>
