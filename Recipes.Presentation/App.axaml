<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Recipes.Presentation"
             x:Class="Recipes.Presentation.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/Colors.axaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:RecipeToImageConverter x:Key="RecipeToImageConverter" />
        </ResourceDictionary>
    </Application.Resources>
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <StyleInclude Source="/Styles/ControlStyles.axaml"></StyleInclude>
    </Application.Styles>
</Application>
